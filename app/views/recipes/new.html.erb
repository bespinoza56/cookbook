<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-10">
    <%= form_with(model: @recipe, class: "shadow p-3 mb-3 bg-primary rounded", local: true) do |f| %>
      <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
          <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of recipe..." %>
          </div>
      </div>
      <div class="form-group row">
          <%= f.label :recipe, class: "col-2 col-form-label text-light" %> <br/>
          <div class="col-10">
          <%= f.text_area :recipe, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your recipe..."  %>
          </div>
     </div>
      <div class="form-group row justify-content-center">
          <%= f.submit class:"btn btn-outline-light btn-lg"%>
      </div>
    <% end %>
    </div>
  </div>
  <div class="row justify-content-center mb-3">
      <%= link_to '[ Cancel and return to index ]', recipes_path, class: "text-primary" %>
  </div>
</div>
